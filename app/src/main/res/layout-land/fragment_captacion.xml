<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jesusinca.alianza.Fragments.CaptacionFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:padding="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo1"
                                android:text="Captaci贸n Individual"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/texto_ubigeo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/titulo2"
                                    android:text=""
                                    android:textSize="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textStyle="italic"/>
                                <ImageView
                                    android:id="@+id/icon_ubigeo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:src="@mipmap/icon_next"
                                    android:tint="@color/blue"/>


                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo2"
                                android:text="Realizar Captaci贸n - Prueba Diagnostico Individual"/>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/blue"
                                android:layout_margin="8dp">
                                <Button
                                    android:id="@+id/accion_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Realizar Diagnostico"
                                    android:background="@android:color/transparent"
                                    android:textColor="@color/colorWhite"
                                    />
                            </android.support.v7.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo2"
                                android:text="Seguimiento de Postulante"/>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/blue"
                                android:layout_margin="8dp">
                                <Button
                                    android:id="@+id/accion_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Seguimientos"
                                    android:background="@android:color/transparent"
                                    android:textColor="@color/colorWhite"
                                    />
                            </android.support.v7.widget.CardView>



                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_margin="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo1"
                                android:text="Captaci贸n Masiva"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/texto_ubigeo_masivo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/titulo2"
                                    android:text=""
                                    android:textSize="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textStyle="italic"/>
                                <ImageView
                                    android:id="@+id/icon_ubigeo_masivo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:src="@mipmap/icon_next"
                                    android:tint="@color/blue"/>


                            </LinearLayout>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo2"
                                android:text="Gesti贸n de Diagnostico Masivo"/>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/deep_naranja400"
                                android:layout_margin="8dp">
                                <Button
                                    android:id="@+id/accion_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ingresar"
                                    android:background="@android:color/transparent"
                                    android:textColor="@color/colorWhite"
                                    />
                            </android.support.v7.widget.CardView>


                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo1"
                                android:text="Barrio Intimo"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/texto_ubigeo_barrio"
                                    style="@style/titulo2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=""
                                    android:textSize="12dp"
                                    android:textStyle="italic" />

                                <ImageView
                                    android:id="@+id/icon_ubigeo_barrio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:src="@mipmap/icon_next"
                                    android:tint="@color/blue" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/titulo2"
                                android:text="Gesti贸n de Eventos"/>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardElevation="5dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="@color/verde_bajo"
                                android:layout_margin="8dp">
                                <Button
                                    android:id="@+id/accion_5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ir a Eventos"
                                    android:background="@android:color/transparent"
                                    android:textColor="@color/colorWhite"
                                    />
                            </android.support.v7.widget.CardView>



                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>


        </ScrollView>

</FrameLayout>
