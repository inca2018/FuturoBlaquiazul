<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/blanco"
    android:layout_margin="4dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="3"
                    android:src="@drawable/user_default"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/card_metodologia_fase_pruebas_jugador"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="JESUS INCA CARDENAS"
                            android:textSize="15dp"
                            android:layout_margin="2dp"
                            android:textColor="@color/titulos"
                            android:textAlignment="center"
                            android:gravity="center"
                            />

                        <TextView
                            android:id="@+id/card_metodologia_fase_pruebas_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text=""
                            android:textSize="15dp"
                            android:layout_margin="2dp"
                            android:textColor="@color/titulos"
                            android:textAlignment="center"
                            android:gravity="center"/>


                    </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12">
                <ImageView
                    android:id="@+id/metodologia_personas_fase_pruebas_acciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_menu_popup"
                    android:tint="@color/titulos"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>