<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jesusinca.alianza.Activities.Captacion.SeguimientoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:id="@+id/altura_campo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_campo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cancha"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycler_seguimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:scrollbars="vertical" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/deep_naranja900"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/opciones_diagnostico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Diagnostico"
                android:textColor="@color/blanco"
                android:padding="4dp"
               />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/deep_naranja400"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/opciones_informacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="InformaciÃ³n"
                android:textColor="@color/blanco"
                android:background="@android:color/transparent"
                android:drawableTint="@color/blanco"
                android:padding="4dp"
             />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">


            <Button
                android:id="@+id/opciones_guardar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:text="guardar"
                android:textColor="@color/blanco"

                />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
