<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jesusinca.alianza.Activities.Captacion.ListaPersonaSeguimientoActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/titulo1"
            android:text="Lista de Personas :"
            android:textAlignment="center"/>

        <TextView
            style="@style/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Relacion de personas que lograron pasar la prueba de Diagnostico "
            android:textAlignment="viewStart" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recylcer_Seguimiento_Personas"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </android.support.v7.widget.RecyclerView>


        </LinearLayout>



    </LinearLayout>



</LinearLayout>
