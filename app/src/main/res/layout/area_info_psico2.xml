<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/area_inca2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical"
    android:visibility="gone"

    >

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/opcion_inca12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="OPCION 1 "
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <RadioGroup
                android:id="@+id/group_inca12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkedButton="@+id/inca112"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca112"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="0"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite"

                    />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca122"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="1"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca132"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="2"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca142"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="3"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/opcion_inca22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="OPCION 2 "
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <RadioGroup
                android:id="@+id/group_inca22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkedButton="@+id/inca212"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca212"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="0"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca222"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="1"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca232"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="2"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/inca242"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/white"
                    android:text="3"
                    android:textColor="@android:color/white"
                    app:buttonTint="@color/colorWhite" />

            </RadioGroup>

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>