<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Prueba Fisica:"
        android:textAlignment="center"
        style="@style/titulo1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="5dp"
                     >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Peso:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_Peso"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:hint="kg."
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:textAlignment="center"
                                android:textColorHint="@color/titulos">

                                <requestFocus />
                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Talla:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_talla"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="mts."
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:textColorHint="@color/titulos">

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="RJ:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_RJ"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="cmts."
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:textColorHint="@color/titulos">

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="CMJ:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_CMJ"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="cmts."
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:textColorHint="@color/titulos">

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">


                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="ABK:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_ABK"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="cmts."
                                android:inputType="numberDecimal"
                                android:maxLength="9"

                                android:textColorHint="@color/titulos">

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="FMS:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_FMS"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="Ptos."
                                android:inputType="number"
                                android:maxLength="9"
                                android:textColorHint="@color/titulos">

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">


                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Velocidad:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_vel_s"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="seg."
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:textColorHint="@color/titulos">

                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Yo-Yo:"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e_yo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/input_texto"
                                android:ems="5"
                                android:gravity="center"
                                android:hint="palier"
                                android:inputType="numberDecimal"
                                android:maxLength="9"
                                android:textColorHint="@color/titulos"></EditText>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10sp"
                    app:cardBackgroundColor="@color/verde"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calcular"
                            android:layout_margin="8dp"
                            android:background="@color/verde_bajo"
                            android:textColor="@color/blanco"
                            android:textStyle="bold"
                            android:onClick="calcularDatos1"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Velocidad(Kms/Hr):"
                                android:textColor="@color/blanco"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/re_velo1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|center"
                                android:text="0,00"
                                android:textColor="@color/blanco"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Potencia(w):"
                                android:textColor="@color/blanco"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/re_pot1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|center"

                                android:text="0,00"
                                android:textColor="@color/blanco"
                                android:textStyle="bold"
                                android:textSize="18sp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:text="Resistencia(Vo2MÃ¡x):"
                                android:textColor="@color/blanco"
                                android:textSize="14sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/re_resis1"
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:gravity="center_horizontal|center"
                                android:text="0,00"
                                android:textAlignment="center"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/morado_bajo"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="10sp"
                    app:cardBackgroundColor="@color/morado_bajo"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                             >


                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Velocidad Prom:"
                                android:textColor="@color/blanco"
                                android:textSize="14sp"
                                android:textStyle="bold|italic"/>

                            <TextView
                                android:id="@+id/re_velo2"
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1000,00"
                                android:textAlignment="center"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Potencia Prom:"
                                android:textColor="@color/blanco"
                                android:textSize="14sp"
                                android:textStyle="bold|italic"/>

                            <TextView
                                android:id="@+id/re_pot2"
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1000,00"
                                android:textAlignment="center"
                                android:textColor="@color/blanco"
                                android:textStyle="bold" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                            <TextView
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Resistencia Prom:"
                                android:textColor="@color/blanco"
                                android:textSize="14sp"
                                android:textStyle="bold|italic"/>

                            <TextView
                                android:id="@+id/re_resis2"
                                style="@style/titulo2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="1000,00"
                                android:textAlignment="center"

                                android:textColor="@color/blanco"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/deep_naranja400"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="15sp"
                    app:cardBackgroundColor="@color/deep_naranja400"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="4dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Puntaje Fisico:"
                                style="@style/titulo2"
                                android:textColor="@color/blanco"
                                android:layout_marginRight="50dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/re_total"
                                android:text="1000.00"
                                android:textSize="30dp"
                                android:textColor="@color/blanco"
                                style="@style/titulo2"
                                android:textStyle="bold"/>



                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR"
                    android:drawableLeft="@mipmap/icon_save"
                    android:background="@color/fb"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:onClick="guardar_datos"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>

</LinearLayout>

