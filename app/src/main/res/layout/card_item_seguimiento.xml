<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/fb"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CODIGO"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/titulos"/>
                    <TextView
                        android:id="@+id/card_seguimiento_codigo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="SEG-002"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:textColor="@color/titulos"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/card_seguimiento_competencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/titulos"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="CAMPEONTATO"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/card_seguimiento_rival"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:text="RIVAL"
                        android:layout_weight="2"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12">
                <ImageView
                    android:id="@+id/card_seguimiento2_acciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_menu_popup"
                    android:tint="@color/titulos"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>