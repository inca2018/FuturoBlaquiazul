<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.futuroblanquiazul.futuroblaquiazul.Activities.Metodologia.ListaPersonasGrupoPruebasActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/titulo1"
            android:textAlignment="center"
            android:text="Lista de Jugadores:"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/titulo2"
            android:textAlignment="center"
            android:textStyle="italic"
            android:text="Seleccione las pruebas a realizar por cada jugador"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_jugadores_grupo_pruebas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">



        </android.support.v7.widget.RecyclerView>


    </LinearLayout>
</LinearLayout>
