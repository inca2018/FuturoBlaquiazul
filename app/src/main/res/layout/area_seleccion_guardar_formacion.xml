<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             style="@style/titulo1"
             android:textColor="@color/blue"
             android:textAlignment="center"
             android:text="Seleccione Formación:"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <RadioGroup
                android:id="@+id/grupo_formacion_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:checkedButton="@+id/radio_formacion7">

                <RadioButton
                    android:id="@+id/radio_formacion7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Formación Base 7 Jugadores"
                    android:textAlignment="center"
                    />

                <RadioButton
                    android:id="@+id/radio_formacion8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Formación Base 8 Jugadores"
                    android:textAlignment="center"/>

                <RadioButton
                    android:id="@+id/radio_formacion9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Formación Base 9 Jugadores"
                    android:textAlignment="center"/>

                <RadioButton
                    android:id="@+id/radio_formacionCompete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Formación Base Competitiva 11 Jugadores"
                    android:textAlignment="center"/>


            </RadioGroup>
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <Button
                android:id="@+id/guardar_definir_formacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:text="@string/guardar"
                android:textColor="@color/blanco" />

        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>