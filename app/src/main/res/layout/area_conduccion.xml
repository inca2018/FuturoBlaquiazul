<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/area_tactica3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Conducción"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="@dimen/letra_fisico"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op123"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Nº 1 "
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/letra_fisico" />

                <RadioGroup
                    android:id="@+id/grupo_tecnico123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkedButton="@+id/cond112"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond112"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="0"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond122"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="1"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond132"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="2"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond142"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="3"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op223"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Nº 2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/letra_fisico" />

                <RadioGroup
                    android:id="@+id/grupo_tecnico223"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkedButton="@+id/cond212"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond212"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="0"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond222"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="1"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/cond232"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="2"
                        android:textColor="@android:color/white"
                        app:buttonTint="@color/colorWhite" />

                    <android.support.v7.widget.AppCompatRadioButton
