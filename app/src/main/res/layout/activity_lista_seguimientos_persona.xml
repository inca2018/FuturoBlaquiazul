<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Captacion.ListaSeguimientosActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/titulo1"
            android:text="Lista de Seguimientos:"
            android:textAlignment="center"
            android:layout_margin="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/titulo2"
                    android:layout_weight="2"
                    android:text="Postulante:" />
                <TextView
                    android:id="@+id/info_seguimiento_persona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/titulo2"
                    android:layout_weight="1"
                    android:textStyle="italic"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/titulo2"
                    android:layout_weight="2"
                    android:text="UbicaciÃ³n:" />
                <TextView
                    android:id="@+id/info_seguimiento_ubigeo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/titulo2"
                    android:layout_weight="1"
                    android:textStyle="italic"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Promedio Seguimiento:" />

                <TextView
                    android:id="@+id/info_seguimiento_promedio"
                    style="@style/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"

                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"/>

            </LinearLayout>

            <TextView
                android:id="@+id/opcion_migrar_fase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Migrar a Fase de Pruebas"
                android:textStyle="italic"
                android:textColor="@color/blue"
                android:textAlignment="center"
                android:gravity="center"
                style="@style/titulo2"/>

        </LinearLayout>




        <android.support.v7.widget.CardView
            android:id="@+id/nuevo_seguimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/blue"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="NUEVO SEGUIMIENTO"
                    android:textColor="@color/blanco"
                    android:gravity="center"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:src="@mipmap/icon_add"
                    android:tint="@color/blanco"/>

            </LinearLayout>



        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Recycler_Seguimientos_lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
