<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.futuroblanquiazul.futuroblaquiazul.Activities.Estadistico.NuevaFechaEstadisticoActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/blanco"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/titulo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creación de Nueva Fecha:"
                    android:textAllCaps="true" />

                <TextView
                    style="@style/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete la siguiente información:"
                    android:textAlignment="center"
                    android:textAllCaps="false" />

                <TextView
                    style="@style/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Seleccione Oponente:" />

                <Spinner
                    android:id="@+id/nuevo_fecha_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>

                <TextView
                    style="@style/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Datos Adicionales:" />

                <EditText
                    android:id="@+id/nuevo_fecha_observaciones"
                    style="@style/input_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLength="200" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/titulo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fecha de Realización:" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/nuevo_fecha_fecha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:background="@android:color/transparent"
                                android:src="@mipmap/icon_calendar2" />

                            <EditText
                                android:id="@+id/nuevo_fecha_texto"
                                style="@style/input_texto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="8dp">

                    <Button
                        android:id="@+id/nuevo_fecha_crear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="CREAR"
                        android:textColor="@color/blanco" />



                </android.support.v7.widget.CardView>

            </LinearLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>
</LinearLayout>
