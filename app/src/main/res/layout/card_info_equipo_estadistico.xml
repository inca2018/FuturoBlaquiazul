<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caja_borde2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_est_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/caja_borde"
                    android:gravity="center"
                    android:text="Nº"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/card_est_persona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/caja_borde"
                    android:gravity="center|start"
                    android:text="Alineación"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/caja_borde"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_est_camiseta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/caja_borde"
                    android:gravity="center"
                    android:text="#JUG"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/card_est_posicion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/caja_borde"
                    android:gravity="center"
                    android:text="POS"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/caja_borde"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/card_est_pg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="PG"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_dr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="DR"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_og"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="OG"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_r"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="R"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_g"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="G"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_of"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="OF"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_bp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="BP"
                            android:textColor="@color/blue" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/card_est_br"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="BR"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_f"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="F"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_ta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="TA"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_tr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="TR"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/card_est_atj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/caja_borde"
                            android:gravity="center"
                            android:text="ATJ"
                            android:textColor="@color/blue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/caja_borde"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_est_tj"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TJ"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/card_est_ptje"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/caja_borde"
                        android:gravity="center"
                        android:text="PTJE"
                        android:textColor="@color/blue"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>