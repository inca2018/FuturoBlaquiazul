<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/deep_naranja400"
    android:layout_margin="4dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="2dp"
                >
                <TextView
                    android:id="@+id/card_masivo_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="TITULO MASIVO"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:textColor="@color/blanco"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/card_masivo_ubigeo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="UBICACION LIMA/LIMA/LOS OLIVOS"
                        android:textSize="10dp"
                        android:textStyle="italic"
                        android:layout_margin="1dp"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/card_masivo_creador"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="REGISTRADO POR: ADMINISTRADOR"
                        android:textSize="10dp"
                        android:layout_margin="2dp"
                        android:textColor="@color/blanco"
                        android:textAlignment="center"/>



                </LinearLayout>



            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/blanco"
                app:cardCornerRadius="10dp"
                android:layout_margin="2dp"
                app:cardElevation="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="2dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="NÂº Postulantes"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:textColor="@color/deep_naranja900"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/card_masivo_cantidad_postulantes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="100"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/deep_naranja900"
                        android:textStyle="bold"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>