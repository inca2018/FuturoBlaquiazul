<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:backgroundTint="@color/red"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/op1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:padding="10dp"
                android:text="P"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:backgroundTint="@color/blue"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/op2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="R"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/morado_bajo"
            android:backgroundTint="@color/morado_bajo"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/morado_bajo"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/op3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:text="PG"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="15sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/deep_naranja400"
            android:backgroundTint="@color/deep_naranja400"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/deep_naranja400"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/op4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:text="DR"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="15sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/verde_bajo"
            android:backgroundTint="@color/verde_bajo"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/verde_bajo"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/op5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="G"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>